<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <!-- bin sctipts -->
    <fileSets>
        <fileSet>
            <directory>../bin</directory>
            <includes>
                <include>**</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
    <!-- sample scripts -->
        <fileSet>
            <directory>../sample/</directory>
            <includes>
                <include>scripts/**</include>
            </includes>
            <lineEnding>unix</lineEnding>
        </fileSet>
    </fileSets>
    <files>
        <!-- agent, install and submit lib jars -->
        <file>
            <source>../agent/target/byteman-${project.version}.jar</source>
            <outputDirectory>lib</outputDirectory>
            <destName>byteman.jar</destName>
            <lineEnding>keep</lineEnding>
        </file>
        <file>
            <source>../submit/target/byteman-submit-${project.version}.jar</source>
            <outputDirectory>lib</outputDirectory>
            <destName>byteman-submit.jar</destName>
            <lineEnding>keep</lineEnding>
        </file>
        <file>
            <source>../install/target/byteman-install-${project.version}.jar</source>
            <outputDirectory>lib</outputDirectory>
            <destName>byteman-install.jar</destName>
            <lineEnding>keep</lineEnding>
        </file>
        <!-- sample jar -->
        <file>
            <source>../sample/target/byteman-sample-${project.version}.jar</source>
            <outputDirectory>sample/lib</outputDirectory>
            <destName>byteman-sample.jar</destName>
            <lineEnding>keep</lineEnding>
        </file>
        <!-- contrib jars and READMEs -->
        <file>
            <source>../contrib/dtest/target/byteman-dtest-${project.version}.jar</source>
            <outputDirectory>contrib/dtest</outputDirectory>
            <destName>byteman-dtest.jar</destName>
            <lineEnding>keep</lineEnding>
        </file>
        <file>
            <source>../contrib/dtest/README.txt</source>
            <outputDirectory>contrib/dtest</outputDirectory>
            <lineEnding>keep</lineEnding>
        </file>
        <file>
            <source>../contrib/bmunit/target/byteman-bmunit-${project.version}.jar</source>
            <outputDirectory>contrib/bmunit</outputDirectory>
            <destName>byteman-bmunit.jar</destName>
            <lineEnding>keep</lineEnding>
        </file>
        <file>
            <source>../contrib/bmunit/README.txt</source>
            <outputDirectory>contrib/bmunit</outputDirectory>
            <lineEnding>keep</lineEnding>
        </file>
        <!-- documentation -->
        <file>
            <source>../README</source>
            <lineEnding>keep</lineEnding>
        </file>
        <file>
            <source>../docs/copyright.txt</source>
            <outputDirectory>docs</outputDirectory>
            <lineEnding>keep</lineEnding>
        </file>
        <file>
            <source>../docs/ProgrammersGuide.pdf</source>
            <outputDirectory>docs</outputDirectory>
            <lineEnding>keep</lineEnding>
        </file>
        <file>
            <source>../ext/third_party_licenses.txt</source>
            <outputDirectory>docs</outputDirectory>
            <lineEnding>keep</lineEnding>
        </file>
    </files>
</assembly>
